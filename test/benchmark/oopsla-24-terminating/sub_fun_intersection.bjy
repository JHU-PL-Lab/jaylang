(* subtyping of refined intersection type. *)

let t = { f : ((`Int of int) -> int) & ((`Bool of bool) -> bool) | f (`Bool true) }

let f =
  fun x ->
    match x with
    | `Bool b -> true
    | `Int i -> i
    | _ -> 1 :: 2 :: []
    end

let g (h : t) : t =
  fun x -> f x

let x = g f 