(***
  (
    (features (Refinement_types Dependent_types Records Recursive_functions))
    (speed Slow)
    (typing Well_typed)
  )
*)

let rec mult (x : { n : int ; m : int }) : { i : int | i >= 0 } =
  if x.n <= 0 || x.m <= 0
  then 0
  else x.n + mult { n = x.n ; m = (x.m - 1) } 

let sqr (dependent n : { i : int | i > 1 }) : { c : int | c >= n + 1 } =
  mult { n = n ; m = n }
