    (features (Refinement_types Mu_types Variants Records Recursive_functions))
    (speed Slow)
    (typing Well_typed)
  )
*)

let t = Mu t.
  | `Node of { left : t ; right : t }
  | `Leaf of { leaf : bool }

let max x y =
  if x > y
  then x
  else y

let rec depth (tree : t) : { i : int | i >= 0 } =
  match tree with
  | `Leaf leaf -> 0
  | `Node node -> 1 + max (depth node.left) (depth node.right)
  end
