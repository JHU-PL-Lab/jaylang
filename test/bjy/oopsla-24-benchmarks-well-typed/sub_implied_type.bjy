let zero_type : type = { i : int | i == 0 }

(* ignored arg must be 0. Applies 0 to g *)
let appl_zero (g : zero_type -> bool) (_ : zero_type) : bool =
  g 0

let rec f n zero_arg =
  if n <= 0
  then true
  else appl_zero (f (n - 1)) zero_arg

let main (n : int) : bool =
  f n 0