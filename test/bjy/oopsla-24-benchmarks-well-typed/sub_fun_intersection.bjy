(* subtyping of refined intersection type. *)

let t : type = { f : ((`Int of int) -> int) & ((`Bool of bool) -> bool) | f (`Bool true) }

(* this is a subtype of t *)
let f : t =
  fun x ->
    match x with
    | `Bool b -> true
    | `Int i -> i
    | _ -> 1 :: 2 :: []
    end

let g (h : t) : t =
  fun x -> f x

let x = g f 