let tree_type = Mu t.
  | `Node of { left : t; right : t }
  | `Leaf of { leaf : int }

let x : tree_type = 
  `Node { left = 
    `Node { left = 
      `Node { left = 
        `Node { left = `Leaf { leaf = 0 } ; right = `Leaf { leaf = 0 } }
      ; right = `Leaf {leaf = 0 } }
    ; right = `Leaf {leaf = 0 } }
  ; right = `Leaf { leaf = 0 } }
