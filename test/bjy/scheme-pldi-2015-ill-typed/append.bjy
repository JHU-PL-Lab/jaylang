# ill-typed when a and b are empty

let is_nonempty ls =
  match ls with
  | [] -> false
  | _ -> true
  end
in

let rec append (type a_) (a : List a_) (b : List a_) : { List a_ | is_nonempty } =
  match a with
  | [] -> b # ERROR: `b` could be empty
  | hd :: tl -> hd :: append a_ tl b
  end
in

append