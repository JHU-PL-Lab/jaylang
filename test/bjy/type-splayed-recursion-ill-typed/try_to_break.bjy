let t = mu t. 
  | `X of t  (* actual recursive type *)
  | `Y of unit

let t2 = mu t2.
  | `X of (mu t3. unit)
  | `Y of unit

let f (x : t) : t2 =
  match x with
  | `X y -> y
  | `Y u -> assume false
  end
