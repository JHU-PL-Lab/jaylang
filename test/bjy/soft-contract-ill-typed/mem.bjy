(* type-error is that mk_list should contain x; but it doesn't *)

let rec mem x xs =
  match xs with
  | [] -> false
  | hd :: tl -> hd == x || mem x tl
  end

let ret_type x =
  { l : list int |
    match l with  
    | [] -> true
    | a :: b -> mem x l
    end
  }

let rec mk_list (x <- int) (n : int) : ret_type x = 
  if n < 0
  then []
  else n :: mk_list x (n - 1) (*ERROR : the `n :: ...` should be `x :: ...` *)
