(* effectively assert that x is true *)
let h (_ : { x : bool | x }) : unit =
  {}

(* .. but y is true *)
let g (_ : bool) (_ : { y : bool | y }) : unit =
  {}

let rec f x y =
  if x
  then f y y (* ERROR: this is f false false => g false false => assert false *)
  else g x y

let main =
  if 0 < 1
  then f (0 < 1) (1 < 0)
  else h (1 < 0)
