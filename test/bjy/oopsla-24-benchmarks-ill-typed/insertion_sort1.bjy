let is_nonempty lst =
  match lst with
  | [] -> false
  | _ -> true
  end

let rec ne_sorted lst =
  match lst with
  | [] -> true
  | a :: tl ->
    match tl with
    | [] -> true
    | b :: tll -> a <= b && ne_sorted tl
    end
  end

let rec foldl f b l =
  match l with
  | [] -> b
  | x :: xs -> foldl f (f x b) xs
  end

let rec insert x l =
  match l with
  | [] -> [ x ]
  | h :: t ->
    if x <= h
    then h :: (insert x t) (* ERROR: the `then` and `else` cases are switched *)
    else x :: l
  end

let ret_type xs =
  { list int | fun l ->
    ne_sorted l
    &&
      if is_nonempty xs
      then is_nonempty l
      else not (is_nonempty l)
  }

let sort (xs <- list int) : ret_type xs =
  foldl insert [] xs