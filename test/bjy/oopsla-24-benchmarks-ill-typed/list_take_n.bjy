let pos_int : type = { i : int | i > 0 }

let rec len ls = 
  match ls with
  | [] -> 0
  | hd :: tl -> 1 + len tl
  end

let rec take (type a_) (n <- pos_int) (l : list a_) : { ls : list a_ | len ls <= n } =
  match l with
  | [] -> []
  | hd :: tl ->
    if n == 1
    then hd (* ERROR: should be `[hd]` here *)
    else hd :: take a_ (n - 1) tl
  end
