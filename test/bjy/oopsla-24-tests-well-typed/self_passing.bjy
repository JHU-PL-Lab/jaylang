(***
  (
    (features (Records Higher_order_functions OOP_style))
    (speed Fast)
    (typing Exhausted)
  )
*)

let t = { f : int -> int }

let ob =
  fun self ->
    (* NOTE: don't try to precompute `self self` because it diverges *)
    { f = fun x -> (self self).x + x
    ; x = 1 }

let obj : t = ob ob
