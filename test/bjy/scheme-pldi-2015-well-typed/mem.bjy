(* type-error is that mk_list should contain x; but it doesn't *)

let rec mem x xs =
  match xs with
  | [] -> false
  | hd :: tl -> hd == x or mem x tl
  end

let ret_type x =
  { l : list int |
    match l with  
    | [] -> true
    | a :: b -> mem x l
    end
  }

letd rec mk_list (x : int) : int -> ret_type x = 
  fun n ->
    if n < 0
    then []
    else x :: mk_list x (n - 1)
