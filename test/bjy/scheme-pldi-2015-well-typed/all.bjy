(***
  (features (Polymorphic_types Recursive_functions Higher_order_functions Return_type))
*)

(* simple error with return type in singleton case *)

let rec all (type a_) (p : a_ -> bool) (xs : list a_) : bool =
  match xs with
  | [] -> true
  | x :: xss -> 
    match xss with
    | [] -> p x
    | _ -> (p x) and (all a_ p xss)
    end
  end
