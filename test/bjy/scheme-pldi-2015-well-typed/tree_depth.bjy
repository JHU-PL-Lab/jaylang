# simple error that depth should be positive but leaf has depth 0

let t = Mu tt.
  ``Node { left : tt ; right : tt }
  || ``Leaf { leaf : bool }

let max x y =
  if x > y
  then x
  else y

let rec depth (tree : t) : { i : int | i >= 0 } =
  match tree with
  | `Leaf leaf -> 0
  | `Node node -> 1 + max (depth node.left) (depth node.right)
  end
