(* type error is that list can be empty and has no last. An `is_nonempty` predicate fixes it. *)

(* y combinator *)
let Y f =
  fun y ->
    (fun x -> f (fun z -> (x x) z))
    (fun x -> f (fun z -> (x x) z))
    y

let is_nonempty ls =
  match ls with
  | [] -> false
  | _ -> true
  end

let last (type a_) (l : { list a_ | is_nonempty }) : a_ =
  Y (
    fun self x ->
      match x with
      | [] -> assert false
      | x :: xs -> 
        match xs with
        | [] -> x
        | _ -> self xs
        end
      end
  ) l