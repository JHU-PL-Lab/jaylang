let rec list_count (ls : List 'a) (f : 'a -> bool) : int =
  match ls with
  | [] -> 0
  | hd :: tl ->
    let a = if f hd then 1 else 0 in
    a + list_count tl f
  end
in

# Computes sgn of permutation
let sgn (ls : List 'a) (compare : 'a -> 'a -> int) : sign =
  let rec num_inversions l =
    match l with
    | [] -> 0
    | hd :: tl -> list_count tl (fun x -> compare x hd < 0) + num_inversions tl # ERROR: should be `compare x hd < 0`
    end
  in
  if num_inversions ls % 2 == 0
  then `Even { even = true }
  else `Odd { odd = true }
in

sgn

